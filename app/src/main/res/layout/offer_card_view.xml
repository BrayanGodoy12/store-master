<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="2dp"
>
    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/product_card"
            app:cardBackgroundColor="#f9f9f9"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            android:layout_margin="2dp"
    >
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp">

            <ImageView
                    android:layout_width="131dp"
                    android:layout_height="102dp"
                    android:id="@+id/offer_img"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="16dp"
                    android:contentDescription="TODO"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/offer_name"
                    android:layout_toEndOf="@+id/offer_img"
                    android:layout_alignParentTop="true"
                    android:textSize="30sp"
            />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/offer_price"
                    android:layout_toEndOf="@+id/offer_img"
                    android:layout_below="@+id/offer_name"
                    android:textColor="#5588ff"
                    android:textSize="20sp"
            />
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/offer_description"
                    android:layout_toEndOf="@+id/offer_img"
                    android:layout_below="@+id/offer_price"
            />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>