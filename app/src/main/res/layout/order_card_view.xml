<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="2dp"
>
    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/order_card"
            app:cardBackgroundColor="#f9f9f9"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            android:layout_margin="2dp"
    >
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:clickable="true" android:onClick="selectOrder">
            <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/order_code"
                    android:layout_alignParentStart="true" android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp" android:layout_alignParentTop="true"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/order_date"
                    android:layout_toEndOf="@+id/order_code" android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp" android:layout_alignParentTop="true"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/order_price"
                    android:layout_toEndOf="@+id/order_date" android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp" android:layout_alignParentTop="true"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>